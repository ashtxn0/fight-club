<%- include("partials/header"); -%>

    







<div class="events-page-container">
  <div class="title-text-row">
    <div class="rect"></div>
    <h1 class="title-text events-title">Events</h1>
    <div class="rect"></div>
</div>   
    <h3 class="events-title">UFC</h3>            
         <div class="swiper-container swiper1">
            <div class="swiper-wrapper">
                <% newEvents.reverse().forEach(function(event){ %>                                   
                   <% if(event.org == "UFC"){ %>
                    <div class="swiper-slide">
                        <div class="events-card">
                        <a href=<%= "/event/"+ event._id %>><img class="events-Photo" src=<%="/data/uploads/"+ event.picture %> alt="event picture"></a>
                        <div class="events-info-container">
                          <h3><%= event.name %></h3>
                          <p><%= event.date.toDateString().split(" ").slice(0,4).join(" ") %></p>
                          <p><%= event.location %></p>
                        </div>
                        
                        </div>
                    </div>
                   <% } %>
               <% }) %>
            </div>
            <div class="swiper-button-prev swiper-button-prev1 swipe"><img class="swiper-nav-button nav-dark" style="height: 68px;" src="/image/left-arrow-btn.svg" alt=""><img class="swiper-nav-button nav-light" style="height: 68px;" src="/image/left-arrow-btn-black.svg" alt=""></div>
            <div class="swiper-button-next swiper-button-next1 swipe"><img class="swiper-nav-button nav-dark" style="height: 68px;" src="/image/right-arrow-btn.svg" alt=""><img class="swiper-nav-button nav-light" style="height: 68px;" src="/image/right-arrow-btn-black.svg" alt=""></div>
         </div>       
        <div class="divider"></div>
         <h3 class="events-title">LFA</h3>            
         <div class="swiper-container swiper2">
            <div class="swiper-wrapper">
                <% newEvents.reverse().forEach(function(event){ %>                                   
                   <% if(event.org != "UFC" && event.org != "PFL"){ %>
                    <div class="swiper-slide">
                        <div class="events-card">
                        <a href=<%= "/event/"+ event._id %>><img class="events-Photo" src=<%="/data/uploads/"+ event.picture %> alt="event picture"></a>
                        <div class="events-info-container">
                          <h3><%= event.name %></h3>
                          <p><%= event.date %></p>
                          <p><%= event.location %></p>
                        </div>
                    </div>
                    </div>
                   <% } %>
               <% }) %>
            </div>
            <div class="swiper-button-prev swiper-button-prev2 swipe"><img class="swiper-nav-button nav-dark" style="height: 68px;" src="/image/left-arrow-btn.svg" alt=""><img class="swiper-nav-button nav-light" style="height: 68px;" src="/image/left-arrow-btn-black.svg" alt=""></div>
            <div class="swiper-button-next swiper-button-next2 swipe"><img class="swiper-nav-button nav-dark" style="height: 68px;" src="/image/right-arrow-btn.svg" alt=""><img class="swiper-nav-button nav-light" style="height: 68px;" src="/image/right-arrow-btn-black.svg" alt=""></div>
         </div>
         <div class="divider"></div>
         <h3 class="events-title">PFL</h3>  
         <div class="swiper-container swiper3">
          <div class="swiper-wrapper">
              <% newEvents.reverse().forEach(function(event){ %>                                   
                 <% if(event.org == "PFL"){ %>
                  <div class="swiper-slide">
                      <div class="events-card">
                      <a href=<%= "/event/"+ event._id %>><img class="events-Photo" src=<%="/data/uploads/"+ event.picture %> alt="event picture"></a>
                      <div class="events-info-container">
                        <h3><%= event.name %></h3>
                        <p><%= event.date %></p>
                        <p><%= event.location %></p>
                      </div>
                  </div>
                  </div>
                 <% } %>
             <% }) %>
          </div>
          <div class="swiper-button-prev swiper-button-prev3 swipe"><img class="swiper-nav-button nav-dark" style="height: 68px;" src="/image/left-arrow-btn.svg" alt=""><img class="swiper-nav-button nav-light" style="height: 68px;" src="/image/left-arrow-btn-black.svg" alt=""></div>
          <div class="swiper-button-next swiper-button-next3 swipe"><img class="swiper-nav-button nav-dark" style="height: 68px;" src="/image/right-arrow-btn.svg" alt=""><img class="swiper-nav-button nav-light" style="height: 68px;" src="/image/right-arrow-btn-black.svg" alt=""></div>
       </div>
           

   
    
    
</div>
        

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    const swiper1 = new Swiper('.swiper1', {
  // Optional parameters
  keyboard: {
    enabled: true,
    onlyInViewport: false,
  },
  rewind:true,
  speed: 500,
  centeredSlides:false,
  breakpoints:{
    1000:{
      slidesPerView:4,
      slidesPerGroup:4,
      spaceBetween:5
    },

    700:{
      slidesPerView:3,
      slidesPerGroup:3,
      spaceBetween:4
    },

    500:{
      slidesPerView: 2,
      slidesPerGroup:2,
      spaceBetween:2
    },
    100:{
      slidesPerView: 1,
      slidesPerGroup:1,
      spaceBetween:1
    }
  },


  navigation: {
    nextEl: '.swiper-button-next1',
    prevEl: '.swiper-button-prev1',
  },

});

const swiper2 = new Swiper('.swiper2', {
  // Optional parameters
  slidesPerView:4,
  slidesPerGroup:4,
  spaceBetween:5,
  centeredSlides:false,
  rewind:true,
  speed: 500,
  breakpoints:{
    1000:{
      slidesPerView:4,
      slidesPerGroup:4,
      spaceBetween:5
    },

    700:{
      slidesPerView:3,
      slidesPerGroup:3,
      spaceBetween:4
    },

    500:{
      slidesPerView: 2,
      slidesPerGroup:2,
      spaceBetween:2
    },
    100:{
      slidesPerView: 1,
      slidesPerGroup:1,
      spaceBetween:1
    }
  },


  navigation: {
    nextEl: '.swiper-button-next2',
    prevEl: '.swiper-button-prev2',
  },

});

const swiper3 = new Swiper('.swiper3', {
  // Optional parameters
  slidesPerView:4,
  slidesPerGroup:4,
  spaceBetween:5,
  centeredSlides:false,
  rewind:true,
  speed: 500,
  breakpoints:{
    1000:{
      slidesPerView:4,
      slidesPerGroup:4,
      spaceBetween:5
    },

    700:{
      slidesPerView:3,
      slidesPerGroup:3,
      spaceBetween:4
    },

    500:{
      slidesPerView: 2,
      slidesPerGroup:2,
      spaceBetween:2
    },
    100:{
      slidesPerView: 1,
      slidesPerGroup:1,
      spaceBetween:1
    }
  },


  navigation: {
    nextEl: '.swiper-button-next3',
    prevEl: '.swiper-button-prev3',
  },

});
</script>
