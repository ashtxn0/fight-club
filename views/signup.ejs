<%- include("partials/header"); -%>

<div class="sign-up-container">
    
    <div class="sign-up-row">
        <img src="/image/FightClub-Octagon.png" alt="">
        <div class="credentials-container panel">
            
            <form class="signup-form-container" action="/signup" method="post">
                <h2>Create account: </h2>
                <label for="username" class="form-label">Username: </label>
                <input type="text" id="username" name="username" class="form-control" required>
                <label for="email" class="form-label">Email: </label>
                <input type="email" id="email" name="email" class="form-control">
                <label for="password" class="form-label">Password: </label>
                <input type="password" id="password" name="password" class="form-control">
                <label for="confirm-password" class="form-label">Confirm password: </label>
                <input type="password" name="confirmPassword" class="form-control">
                <div class="checkbox-container">
                    <div class="terms-checkbox">
                        <input type="checkbox" name="termsAgree" value=1>
                        <input type="hidden" name="termsAgree" value=0>
                        <label for="termsAgree" class="form-label">I accept the <a href=>terms and conditions.</a></label> 
                    </div>
                </div>
                <button class="button-1">Create an account</button>
                <p>Already have an account? <a href="/login">Sign in here</a></p>
                <% if (messages.error) { %>
                    <p class="error-login-redirect"><%= messages.error %></p>
               <% } %>
            </form>
            
        </div>
        <div class="sign-up-hero panel">
            <h1>Sign up for a free account to access features such as leaving comments, climbing the prediction rankings, and voting on best bets!</h1>
        </div>
    </div>

</div>

<%- include("partials/footer"); -%>